<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="add_columns_to_report" author="cyberdyne_systems">
        <addColumn schemaName="public" tableName="report">
            <column name="created" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn schemaName="public" tableName="report">
            <column name="updated" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="delete_column_from_time_record" author="cyberdyne_systems">
        <dropColumn schemaName="public" tableName="time_record" columnName="created"/>
    </changeSet>

</databaseChangeLog>
